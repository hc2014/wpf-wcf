<Window x:Class="AdminManager.Windows.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="宝儿岛后台管理系统" Height="700" Width="1000"
        Loaded="Window_Loaded_1"
        >
    <Grid ShowGridLines="True" Name="layout">
        <Grid.RowDefinitions>
            <RowDefinition Height="100px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150px"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="LOGO" Name="logo" Grid.Column="0" Grid.Row="0"></Label>
        <StackPanel Name="Menu" Grid.Column="0" Grid.Row="1"></StackPanel>
        <StackPanel Name="ContentWindow" Grid.Column="1" Grid.Row="1">
            
        </StackPanel>
    </Grid>
</Window>
